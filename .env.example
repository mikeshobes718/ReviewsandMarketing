# Copy to .env and fill in your values
OPENAI_API_KEY=sk-...
# Models
TRANSCRIBE_MODEL=whisper-1
SUGGEST_MODEL=gpt-4o-mini
# Defaults
CAPTURE_SECONDS=10
SAMPLE_RATE=16000
# Global hotkeys (comma-separated), works in background
# Valid examples: <cmd>+<shift>+s (mac), <ctrl>+<shift>+s (win/linux)
GLOBAL_HOTKEYS=<cmd>+<shift>+s,<ctrl>+<shift>+s
PTT_HOLD_ENABLED=true
PTT_HOLD_COMBO=f9
MENUBAR_ENABLED=true
